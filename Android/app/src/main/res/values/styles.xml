<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorBlack</item>
    </style>


    <style name="AppTheme.RealmPopDialog">
        <item name="android:background">@android:color/background_light</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">@dimen/realm_pop_text_margin</item>
        <item name="fontPath">fonts/PressStart2P.ttf</item>
    </style>

    <style name="Text.SalmonTextView">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text.BubbleTextView">
        <item name="android:textColor">@color/bubbleColor</item>
        <item name="android:background">@color/bubbleBackground</item>
    </style>

    <style name="Text.WhiteTextView">
        <item name="android:textColor">@android:color/background_light</item>
    </style>

    <style name="SalmonTextViewBigly">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="fontPath">fonts/PressStart2P.ttf</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text.EditText">
        <item name="android:background">@drawable/round_corner_bg</item>
    </style>

    <style name="Text.EditText.FixedWidth">
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="PopLabelWrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="Text.Button">
        <item name="android:background">@color/colorBlack</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2sp</item>
    </style>

    <style name="Text.Button.AccentColor">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


</resources>
